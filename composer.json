{
    "name": "diego-ninja/laravel-censor",
    "description": "A censor and word filtering library for Laravel 10+",
	"keywords": ["profanity", "filter", "strings", "swear", "language", "laravel"],
	"license": "AGPL-3.0",
    "homepage": "https://github.com/diego-ninja/laravel-censor",
	"authors": [
        {
            "name": "Diego Rin Mart√≠n",
            "email": "yosoy@diego.ninja",
			"role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "guzzlehttp/guzzle": "^7",
        "illuminate/contracts": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "barryvdh/laravel-ide-helper": "^3.1",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "mockery/mockery": "^1.4.4",
        "orchestra/testbench": "^9.6",
        "pestphp/pest": "^2 || ^3",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-deprecation-rules": "^2",
        "phpstan/phpstan-strict-rules": "^2",
        "laravel/octane": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Ninja\\Censor\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ninja\\Censor\\CensorServiceProvider"
            ],
            "aliases": {
                "Censor": "Ninja\\Censor\\Facades\\Censor"
            }
        }
    }
}
